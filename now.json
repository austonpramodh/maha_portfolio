{
  "env": {
    "AWS_SES_ACCESS_KEY_ID": "@aws_ses_access_key_id",
    "AWS_SES_ACCESS_KEY": "@aws_ses_access_key",
    "DOMAIN": "auston.dev"
  },
  "builds": [
    {
      "src": "api/*.ts",
      "use": "@now/node"
    },
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.ts"
    }
  ]
}