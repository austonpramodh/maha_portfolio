{
  "env": {
    "AWS_SES_ACCESS_KEY_ID": "@aws_ses_access_key_id",
    "AWS_SES_ACCESS_KEY": "@aws_ses_access_key",
    "DOMAIN": "auston.dev",
    "SENDER_EMAIL": "notification@auston.dev",
    "SENDER_NAME": "Auston Pramodh Barboza",
    "REPLY_TO_EMAIL": "austonpramodh@gmail.com",
    "THEME_COLOR": "#e91e63"
  },
  "builds": [
    {
      "src": "api/*.ts",
      "use": "@now/node"
    },
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.ts"
    }
  ]
}